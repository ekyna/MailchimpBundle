{% extends '@EkynaAdmin/Entity/Default/show.html.twig' %}


{% block actions %}
    {{ admin_resource_btn(resource, 'list') }}
{% endblock %}


{% block main %}
{% apply spaceless %}
<div class="actions">
    {{ admin_resource_btn(audience, 'edit') }}
    {{ admin_resource_btn(audience, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        <li class="active">
            <a href="#audience-general" data-toggle="tab">
                {{ 'ekyna_core.field.general'|trans }}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="audience-general">
                {{ show_row(audience.name, 'text', {
                    'label': 'ekyna_core.field.name'
                }) }}
                {{ show_row(audience.groups, 'entity', {
                    'label': 'ekyna_commerce.customer_group.label.plural',
                    'route': 'ekyna_commerce_customer_group_admin_show',
                    'route_parameters_map': {'customerGroupId': 'id'}
                }) }}
            </div>
        </div>
    </div>
</div>
{% endapply %}
{% endblock %}
